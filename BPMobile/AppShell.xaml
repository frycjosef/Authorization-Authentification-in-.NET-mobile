<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BPMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BPMobile.Views.Auth"
    xmlns:pages="clr-namespace:BPMobile"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="BPMobile"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="BPMobile"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="BPMobile"
        ContentTemplate="{DataTemplate pages:AccessDeniedPage}"
        Route="AccessDeniedPage" />

</Shell>
